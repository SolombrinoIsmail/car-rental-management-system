# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
API_SECRET_KEY=your_api_secret

# Database (Prisma)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret

# Email Service
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your_email
EMAIL_SERVER_PASSWORD=your_password
EMAIL_FROM=noreply@example.com

# Payment Gateway (Swiss providers)
PAYMENT_PROVIDER=stripe
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx

# File Storage
STORAGE_BUCKET=car-rental-uploads

# Monitoring
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development

# Feature Flags
ENABLE_SSO=false
ENABLE_MULTI_LANGUAGE=true
DEFAULT_LANGUAGE=de-CH

# Swiss Compliance
SWISS_VAT_RATE=0.081
CURRENCY=CHF
TIMEZONE=Europe/Zurich

# Security Keys (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_32_char_encryption_key_change_in_production
JWT_SECRET=your_32_char_jwt_secret_change_in_production
CSRF_SECRET=your_32_char_csrf_secret_change_in_production

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Data Retention (days)
RETENTION_PERSONAL_DATA=3650
RETENTION_FINANCIAL_DATA=3650
RETENTION_SENSITIVE_DATA=2555
RETENTION_BEHAVIORAL_DATA=730
RETENTION_TECHNICAL_DATA=90

# GDPR/FADP Compliance
DATA_CONTROLLER_NAME="Swiss Car Rental AG"
DATA_CONTROLLER_EMAIL=privacy@swisscarrental.ch
DATA_CONTROLLER_PHONE="+41 44 123 45 67"
DATA_PROTECTION_OFFICER_EMAIL=dpo@swisscarrental.ch

# Audit Logging
AUDIT_LOG_LEVEL=info
AUDIT_LOG_RETENTION_DAYS=2555
AUDIT_LOG_STORAGE=supabase